<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <g:HTMLPanel>

    <div id='gridcontainer'>

      <div id='topcontainer'>
        <g:FlexTable ui:field="calendarHeader" addStyleNames='calender-weektop' />
      </div>

      <g:SimplePanel ui:field="calendarBodyScrollContainer" addStyleNames='calender-week-scrollcontainer'>
        <g:FlexTable ui:field="calendarBody" addStyleNames='calender-week' />
      </g:SimplePanel>

    </div>

  </g:HTMLPanel>

</ui:UiBinder>

<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field='consts' type='veny.smevente.client.l10n.SmeventeConstants'/>

  <g:HTMLPanel addStyleNames="uc-standard" >

    <g:VerticalPanel horizontalAlignment="ALIGN_LEFT" >
        <g:Label text="{consts.oldPassword}" />
        <g:PasswordTextBox ui:field="old" />
        <g:Label text="{consts.newPassword}" />
        <g:PasswordTextBox ui:field="newP" />
        <g:Label text="{consts.newPasswordAgain}" />
        <g:PasswordTextBox ui:field="newAgain" />
        <g:Cell horizontalAlignment="ALIGN_RIGHT">
          <g:Button text="{consts.change}" ui:field="submit" />
        </g:Cell>
        <g:DisclosurePanel ui:field="validationErrors" />
      </g:VerticalPanel>

  </g:HTMLPanel>

</ui:UiBinder>
